<view class="title">
<view class='title_text'><text>填写信息</text></view>
</view>
<form bindsubmit="formSubmit" report-submit='true' bindreset="formReset">
<view class="imageView" bindtap='uploadImg'>
<view class="imageText">上传照片：</view><image class="image" placeholder='点击添加图片' src = "{{ savedFilePath}}"></image>
</view>
<radio-group class="radio-group_kind" bindchange="radioChangeKind">
  <label class="radio" wx:for="{{items_kind}}" wx:key="{{items_kind}}">
  <radio value="{{item.value}}" checked="{{item.checked}}"/>{{item.name}}
  </label>
</radio-group>
<radio-group class="radio-group_category" bindchange="radioChangeCategory">
  <label class="radio" wx:for="{{items_category}}" data-index='{{index}}' wx:key="{{items_category}}">
  <radio value="{{item.value}}" id="{{index}}" checked="{{item.checked}}"/>{{item.name}}
  </label>
</radio-group>
<view class="info_c"><view class='info_a'>物品名称：<input value="" name="theme" placeholder='必填' maxlength='11' placeholder-style='font-size:70%' style='number'></input></view></view>
<view class="info_c"><view class='info_a'>{{infoCss.time}}：<input value="" name="time" maxlength='8'placeholder='必填'  placeholder-style='font-size:70%' style='number'></input></view></view>
<view class="info_c"><view class='info_a'>联系方式：<input value="" name="contactWay" maxlength='18'placeholder='必填'  placeholder-style='font-size:70%' style='text'></input></view></view>
<view class="info_c"><view class='info_a'>{{infoCss.place}}：<input value="" name="place" maxlength='18'placeholder='必填'  placeholder-style='font-size:70%' style='number'></input></view></view>
<!-- <input class="inputsize" value="" name="info" placeholder='信息' type='text'>sdfs</input> -->
<view class="info_c"><view class='info_a'>详细信息：<input value="" name="info"placeholder='选填' placeholder-style='font-size:70%' style='number'></input></view></view>
<view class='buttonView'>
<button  bindtap='back' size="mini">取消</button>
<button  formType="submit" size="mini">提交</button>
</view>
</form>
<view class="DrawerPage {{modalName=='viewModal'?'show':''}}">
  <view class="cu-custom" style="height:{{CustomBar}}px;">
    <view class="cu-bar tabbar bg-blue1 fixed" style="height:{{CustomBar}}px;align-items:flex-end;justify-content:flex-start">
    <!-- <view class="cu-bar tabbar bg-black fixed" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;"> -->
      <view class="cu-avatar round" style="background-image:url({{userInfo.avatarUrl}});margin-bottom:7px;width:30px;height:30px"   bindtap="showModal1" data-target="viewModal">
      </view>
      <view class='search-form round' style='margin-bottom:7px;height:30px' bindtap='search'>
        <text class="icon-search"></text>
        <input type="text" placeholder="输入搜索的关键词"  disabled='true'></input>
      </view>
      <view class="action" style='margin-bottom:7px;' bindtap='toManager'>
          <view class='icon-cu-image'>
            <image src='/pages/img/talk.png'></image>
            <view class="cu-tag badge"  wx:if="{{notice}}" style='margin-right:25rpx'></view>
          </view>
        </view>
    </view>
  </view>
  <view class="label">
  <view id='0'  bindtap='category' class="label_c" style='color:{{fontColor[0]}};border-bottom:{{borderB[0]}}'>证件</view>
<view id='1'  bindtap='category'class="label_c" style='color:{{fontColor[1]}};border-bottom:{{borderB[1]}}'>学习</view>
<view id='2'  bindtap='category' class="label_c" style='color:{{fontColor[2]}};border-bottom:{{borderB[2]}}'>电子</view>
<view id='3'  bindtap='category'class="label_c" style='color:{{fontColor[3]}};border-bottom:{{borderB[3]}}'>生活</view>
</view>


<scroll-view  scroll-y="true" class="infoAll" enable-back-to-top='true' scroll-with-animation="true" bindscrolltolower='addInformation'>
<view  wx:for="{{category}}"  wx:for-item="goods" data-index='{{index}}' wx:key="name" style='border-bottom: 1px solid #e9e5e5;'>
<view class="cu-card dynamic no-card">
  <view  class="cu-item shadow">
    <view class="cu-list menu menu-avatar">
      <view class="cu-item">
        <view class="cu-avatar round lg" style="background-image:url({{goods.user.avatarUrl}});"></view>
        <view class='content flex-sub'>
          <view>{{goods.user.nickName}}</view>
          <view class='text-gray text-sm flex justify-between'>
            {{goods.time}}
          </view>
        </view>
        <view bindtap='openMenu' id="{{index}}">
           <image class='commentMenu' src='/pages/img/menu.png'></image>
        </view>
      </view>
    </view>
    <view class='text-content' bindtap='comein' id="{{index}}">
      <text style='margin-right:5%;color:#91d5ff'>#{{goods.kind}}#</text>
      {{goods.infomation}}
    </view>

    <block wx:if="{{showImg[index]}}" >
    <view class="grid col-3 grid-square flex-sub padding-lr" bindtap='comein' id="{{index}}">
      <view class="bg-img " style="background-image:url({{goods.picPath}});" >
      </view>
    </view>
    </block>
    <view class='text-gray  text-df flex justify-between padding' bindtap='comein' id="{{index}}">
      <view class='text-gray text-df flex  align-center'><image style="height:30rpx;width:30rpx;"src='/pages/img/place.png'></image>{{goods.place}}
      </view>
      <view class='text-gray  text-df text-right'>
      <text class="icon-attentionfill "></text>{{goods.count>999?'999+':goods.count}}
      <text class="icon-messagefill "> </text>{{goods.commentMysqlList.length}}
      </view>
    </view>
  </view>
</view>
</view>
</scroll-view>
</view>
<view class="DrawerClose  {{modalName=='viewModal'?'show':''}} " bindtap='hideModal1'>
  <text class='icon-pullright'></text>
</view>
<view class="DrawerWindow {{modalName=='viewModal'?'show':''}}">
  <view class='text-center text-white'>
    <image src='/pages/img/04659501-44ED-4F2E-B77D-295111F566A3.png ' class='response' mode='widthFix' style='width:100%;'></image>

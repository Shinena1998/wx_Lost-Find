    </view>
    <view class='margin-top-sm'>
      <text>By:文晓港</text>
    </view> -->
  </view>
  <view class="cu-list menu card-menu shadow-lg margin-top">
    <scroll-view  scroll-y="true" style='height:100%;width:100%' enable-back-to-top='true' scroll-with-animation="true" >
  <view class="cu-form-group">
    <view class='title'>学院</view>
    <input bindblur='depart' placeholder='比如:计算机科学工程学院' value='{{depart}}' class='radius'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>班级</view>
    <input bindblur='classes' placeholder='比如:计161' value='{{classes}}' class='radius' name='theme'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>学号</view>
    <input bindblur='num'placeholder='10位数字' value='{{num}}' class='radius' name='theme'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>电话</view>
    <input bindblur='phone' placeholder='11位数字' value='{{phone}}'class='radius' name='theme'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>姓名</view>
    <input bindblur='name' placeholder='您的真实姓名' value='{{name}}' class='radius' name='theme'></input>
  </view>
  <form bindsubmit="personInfo" report-submit='true'>
   <view class="padding flex flex-wrap  justify-around align-center bg-white" style='border-top:1px solid #8c8c8c'>
      <button class='cu-btn round' bindtap='hideModal1'>返回</button>
      <button class='cu-btn round' form-type="submit">
          <form bindsubmit="formSubmit1" report-submit='true'>
          <button class='cu-btn round' form-type="submit" style='padding:0px'>
          <form bindsubmit="formSubmit1" report-submit='true'>
          <button class='cu-btn round' form-type="submit" style='padding:0px'>
          <form bindsubmit="formSubmit1" report-submit='true'>
          <button class='cu-btn round' form-type="submit" style='padding:0px'>
          <form bindsubmit="formSubmit1" report-submit='true'>
          <button class='cu-btn round' form-type="submit" style='padding:0px'>
          提交</button></form></button></form></button></form></button></form>
      </button>
  </view>
  </form>
</scroll-view>
  </view>
</view>



<view class="modal-mask" catchtouchmove="preventTouchMove" wx:if="{{showMenu}}"  bindtap='closeMenu' id="{{upingMenu}}"></view>
<view class='menuComtant' animation="{{deleteUp}}" >
  <view class="deleteMenu" bindtap='deleteInfo' id="0">
    <!-- <image style='height:60%;width:8%;' src='/pages/img/delete.png'></image> -->
    <text style='font-size:120%;'>删除</text>
  </view>
  <view class="cancelMenu" id="0" bindtap='closeMenu'>
    <text>取消</text>
  </view>
</view>
<view class='menuComtant' animation="{{reportUp}}" >
  <view class="deleteMenu" bindtap='showModal' id="1">
    <!-- <image style='height:60%;width:8%;' src='/pages/img/report.png'></image> -->
    <!-- <text style='font-size:120%;margin-left:2%'>举报</text> -->
    <text style='font-size:120%;'>举报</text>
  </view>
  <view class="cancelMenu" id="1" bindtap='closeMenu'>
    <text>取消</text>
  </view>
</view>

<view class="cu-modal {{modalName=='report'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class='content'>举报理由</view>
      <view class='action' bindtap='hideModal'>
        <text class='icon-close text-red'></text>
      </view>
    </view>
    <view class='padding-xl'>
      <radio-group class="block" bindchange="reportReasonChange">
        <view class='grid'>
          <view class='padding-xs' wx:for="{{reportReason}}" data-index='{{index}}'  wx:key>
            <label class='flex justify-between align-center flex-sub'>
              <radio class='round' value='{{item}}' id="{{index}}" >{{item}}</radio>
            </label>
          </view>
        </view>
      </radio-group>
    </view>
    <view class="cu-bar bg-white justify-end">
      <view class='action'>
        <button class='cu-btn line-green text-green' bindtap='hideModal'>取消</button>
        <button class='cu-btn bg-green margin-left' bindtap='reportInfo'>举报</button>
      </view>
    </view>
  </view>
</view>
<image src='/pages/img/upload.png' class='upload shadow-lg' bindtap='toUpload' wx:if="{{pass}}"></image>

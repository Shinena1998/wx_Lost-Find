<view class="top">
<view style='width:19%;height:100%;display:flex'>
<image src='/pages/img/logo.png' class='top_addimg'></image>
<text class='top_addimgtext' >信息一览</text>
</view>
<view class='top_search'>
<view class='top_searchtextLeft'></view><image src='/pages/img/u=3202529814,4163970886&fm=214&gp=0.jpg' class="top_searchImg"></image>
<input type="text" class="top_searchText" confirm-type='search' placeholder='搜索需要信息' confirm-type='search' bindtap='search' placeholder-class='top_searchTextPlaceholder'></input><view class='top_searchtextRight'></view>
</view>
</view>

<scroll-view  scroll-x="true">
<view class="label">
<view ><button size='mini' plain='true' id='0' type='{{type[0]}}' bindtap='category'>证件</button></view>
<view><button size='mini' plain='true' id='1' type='{{type[1]}}' bindtap='category'>书本</button></view>
<view><button size='mini' plain='true' id='2' type='{{type[2]}}' bindtap='category'>钱包</button></view>
<view><button size='mini' plain='true' id='3' type='{{type[3]}}' bindtap='category'>其他</button></view>
<view><button size='mini' plain='true' id='4' type='{{type[4]}}' bindtap='category'>关于我的</button></view>
</view>
</scroll-view>

<scroll-view  scroll-y="true" class="infoAll" enable-back-to-top='true' scroll-with-animation="true" bindscrolltolower='addInformation'>
<view class="infoView" wx:for="{{category}}" bindtap='comein' wx:for-item="goods" data-index='{{index}}' wx:key="name" >
<view class='remark'>
τ<view class='remark_time'><text>{{goods.current}}</text></view>
</view>
<view class='OneInfo'>
<view class="infoImgView">
<image class="infoImg" src = "{{goods.picPath}}"></image>
</view>
<view  class="infoText">
<view class = "infoThemeView">
<view class='infoThemeRemindView'>
<text class='infoKind' style='color:red;'>{{goods.kind}}</text>
<image class="infoRemind"src='/pages/img/C329252B-4FC3-4677-9AAF-362E42B3D75D.png ' wx:if="{{inAboutMe && goods.confirm}}"></image>
</view>
<text class='infoTheme' style='color:green;'>{{goods.theme}}</text>
</view>
<view class="infoPlace">
<textarea style="width:100%"auto-height='true' disabled="true" value='{{inforCss[index][0]}}{{goods.place}}'></textarea></view>
<text>{{inforCss[index][1]}}{{goods.time}}</text>
</view>
</view>
</view>
</scroll-view>
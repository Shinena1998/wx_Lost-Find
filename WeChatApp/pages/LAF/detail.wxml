
<scroll-view scroll-y="true" class="InfoView">
<view class="info_c margin1">
  <text style='font-size:150%;'>{{detailInfo.theme}}</text>
  <text class='category'>{{detailInfo.category}}</text>
</view>
<view class="timeView margin1">
  <text class="time">{{detailInfo.time}}</text>
  <text class="time">{{isHasFind}}</text>
</view>

<view class='place margin1'>
  <text>{{detailInfo.place}}</text>
</view>
<view class='text margin1'>
  <text >{{detailInfo.infomation}}</text>
</view>
<image class='margin1' style='height:{{imgHeight}}px;width:{{imgWidth}}px' src = "{{detailInfo.picPath}}"></image>
<view class="content1">
  <view class='contentWay'>
    <image style='height:60rpx;width:60rpx;' src='{{contactWay}}'></image>
    <!-- <text class='icon-phone' style='font-size:50rpx;color:#69c0ff'></text> -->
    <text style='margin-left:5%;'>{{contact}}</text>
  </view>
  <!-- <view class='label_css' bindtap='copy'>
    <view class='label_left'></view>
    <view class='label_middle'>一键复制</view>
    <view class='label_right'></view>
  </view> -->
  <button class='cu-btn round line-blue {{shadow?"shadow":""}}' bindtap='copy' data-target="{{way}}">{{way}}</button>
</view>
<view class='margin1'>
  <block wx:if="{{showTabar}}">
  <view>
    <text style='font-size:80%;' space='true'>评论 </text>
    <text style='font-size:70%;color:#999999'>{{commentNum}}</text>
  </view>
  <view wx:for="{{comment}}" wx:for-item="comment" data-index='{{index}}' wx:key="*this" class='commentView'>
    <image class='commentImg' src='{{comment.userInfo.avatarUrl}}'></image>
    <view class="commentWord">
      <view class="commentNT">
        <text style='font-size:80%;'>{{comment.userInfo.nickName}}</text>
        <text style='font-size:80%;color:#999999'>{{comment.commentInfo.time}}</text>
      </view>
      <text style='margin-bottom:2%;display: flex;'>
        <text style='color:rgb(143, 202, 54)'>{{comment.commentInfo.toName}}</text>
        <text>{{comment.commentInfo.content}}</text>
      </text>
      <view class='menuView'>
        <view class="menuLeft" bindtap='reply' id='{{index}}'>
        <text style='font-size:80%;color:#999999'>@他</text>
        </view> 
        <view class="menuRight" bindtap='openMenu' id='{{index}}'>
        <image class='commentMenu' src='/pages/img/menu.png'></image>
        </view>
      </view>
    </view>
  </view>
  </block>
</view>
</scroll-view> 
<block wx:if="{{showTabar}}">
<view class='top' style='bottom:{{input_bottom}}'>
<view class='top_search'>
<view class='top_sh_left'><image src='/pages/img/comment.png' style= 'padding-left:40%;height:50%;width:50%;'></image></view>
<input type="text" class="top_searchText" placeholder='{{placeHolder}}' confirm-type="send" bindconfirm="sendComment"  adjust-position='true' placeholder-class='top_searchTextPlaceholder' focus='{{inputUp}}' cursor-spacing='5'  bindblur='inputDown' value='{{inputInit}}'></input>
<view class='top_sh_right'></view>
</view>
</view>


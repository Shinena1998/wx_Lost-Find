<view class="title">
<view><image class="comeback" bindtap='back' src='/pages/img/timg.jpeg'></image></view>
<view class='textstyle'><text>详细信息</text></view>
</view>
<view class="flex">
<image class="imgsize inputborder"  src = "{{detailInfo.picPath}}"></image>
<view>
<text class="color">物品类型： </text>
<text>{{detailInfo.category}}</text>
</view>
<view>
<text class="color">拾取时间： </text>
<text>{{detailInfo.time}}</text>
</view>
<view>
<text class="color">拾取地点： </text>
<text>{{detailInfo.place}}</text>
</view>
<view>
<text class="color">联系方式： </text>
<text>{{detailInfo.contactWay}}</text>
</view>
<view class="flexx">
<text class="color">详细内容： </text>
<textarea class='textareaa' name="info" disabled="true" auto-height='true'>{{detailInfo.infomation}}</textarea>
</view>
<view class="flexx">
<text class="color">失主留言：  </text>
<textarea class='textareaa' placeholder='留下感谢的话吧'  auto-height='true' bindblur="message"></textarea>
</view>
</view>
<button class='submit' bindtap='affirm'  wx:if="true" >确认</button>
<form bindsubmit="get_access_token" report-submit='true'>
<button  form-type="submit" type="default">提交</button>
</form>
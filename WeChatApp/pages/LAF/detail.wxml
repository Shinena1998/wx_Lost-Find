    <view class="action text-gray" bindtap='back'>
      <view class='icon-back_android'></view> 返回
    </view>
    <view class="action {{collectCss}}" bindtap="collectInfo">
      <view class='{{collectIcon}}'></view> {{collect}}
    </view>
    <view class="action text-gray" wx:if="{{confirm}}" bindtap='finish'>
      <view class='icon-close' ></view> 结束信息
    </view>
    <view class="action text-gray" wx:else bindtap='showModal1'>
      <view class='icon-notice'></view> 通知发布者
    </view>
    <button class='bg-red submit shareButton' open-type='share'>转发给好友</button>
  </view>


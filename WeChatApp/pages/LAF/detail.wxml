<view class="title">
<view class='title_text'><text>填写信息</text></view>
</view>
<view class="InfoView">
<view class="ImgView">
<view class='Imgtext'>
<text class="color">物品照片：</text></view>
<image class="Img"  src = "{{detailInfo.picPath}}"></image>
</view>
<view class="info_c"><view class='info_a'><text class="color">物品类型：</text>
<text>{{detailInfo.category}}</text></view></view>
<view class="info_c"><view class='info_a'><text class="color">{{infoCss.time}}：</text>
<text>{{detailInfo.time}}</text></view></view>
<view class="info_c"><view class='info_a'><text class="color">{{infoCss.place}}：</text>
<text>{{detailInfo.place}}</text></view></view>
<view class="info_c"><view class='info_a'><text class="color">联系方式：</text>
<text>{{detailInfo.contactWay}}</text></view></view>
<view class="flexx">
<text class="color">详细内容：</text>
<textarea class='textarea' name="info" disabled="true" auto-height='true'>{{detailInfo.infomation}}</textarea>
</view>
<view>
<view wx:if="{{confirm}}">
<view class='finishView'>
<view class='finish_remind_view' >
<text class='finish_remind'>如果失主找回失物，请发布消息者点击</text></view>
<view class='finish_button_view'>
<button class='finish_button' size='mini' bindtap='finish'>结束事件</button></view>
</view>
</view>
<block wx:else>
<view class='finishView' >
<view class='finish_remind_view'>
<text class='finish_remind'>如果是需要找回失物，通知发布消息者</text></view>
<view class='finish_button_view'>
<button class='finish_button' size='mini' bindtap='showDialogBtn'>确认失物</button></view>
</view>
</block>
</view>
</view>

<view class="modal-mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
<view class="modal-dialog" wx:if="{{showModal}}">
<view class="modal-title"><text>失主留言</text></view>

  <view class='modal-content'><input auto-focus='true' bindblur='messageq'></input></view>
  <view class="modal-footer">
    <!-- <view class="btn-cancel" bindtap="onCancel" data-status="cancel">取消</view> -->
    <text class="btn-cancel" bindtap="onCancel" type="default" plain='true'>取消</text>
    <!-- <view class="btn-confirm" bindtap="onConfirm" data-status="confirm">确定</view> -->
<form bindsubmit="get_access_token" report-submit='true' class='btn-confirm' >
    <button type="primary" plain='true' form-type="submit">确定</button>
    </form>
  </view>
</view>
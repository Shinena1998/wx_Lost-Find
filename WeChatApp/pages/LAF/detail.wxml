<view class="modal-mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
<view class="modal-dialog" wx:if="{{showModal}}">
<view class="modal-title"><text>失主留言</text></view>

  <view class='modal-content'>
    <textarea wx:if="{{showText}}" placeholder='说句感谢的话吧' bindblur='message' focus='true' auto-height='true' ></textarea>
    <!-- <input auto-focus='true' bindblur='message' placeholder='说句感谢的话吧'></input> -->
  </view>
  <view class="modal-footer">
    <!-- <view class="btn-cancel" bindtap="onCancel" data-status="cancel">取消</view> -->
    <text class="btn-cancel" bindtap="onCancel" type="default" plain='true'>取消</text>
    <!-- <view class="btn-confirm" bindtap="onConfirm" data-status="confirm">确定</view> -->
    <form bindsubmit="get_access_token" report-submit='true' class='btn-confirm'>
    <button type="primary" plain='true' form-type="submit">确定</button>
    </form>
  </view>
</view>

<view class="cu-modal {{modalName=='message'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class='content'>失主留言</view>
      <view class='action' bindtap='hideModal'>
        <text class='icon-close text-red'></text>
      </view>
    </view>
    <view class='padding-xl'>
    <textarea placeholder='说句感谢的话吧' bindblur='message' focus='true' auto-height='true' ></textarea>
    <!-- <input  bindblur='message' placeholder='说句感谢的话吧'></input> -->
    </view>
    <view class="cu-bar bg-white justify-end">
      <view class='action'>
        <button class='cu-btn line-green text-green' bindtap='hideModal1'>取消</button>
        <button class='cu-btn bg-green margin-left' bindtap='get_access_token'>发送</button>
      </view>
    </view>
  </view>
</view>

<view class="modal-mask" catchtouchmove="preventTouchMove" wx:if="{{showMenu}}"  bindtap='closeMenu' id="{{upingMenu}}"></view>
<view class='menuComtant' animation="{{deleteUp}}" >
  <view class="deleteMenu" bindtap='deleteComment'>
    <image style='height:60%;width:8%;' src='/pages/img/delete.png'></image>
    <text style='font-size:120%;margin-left:2%'>删除</text>
  </view>
  <view class="cancelMenu" id="0" bindtap='closeMenu'>
    <text>取消</text>
  </view>
</view>
<view class='menuComtant' animation="{{reportUp}}" >
  <view class="deleteMenu" bindtap='showModal' >
    <image style='height:60%;width:8%;' src='/pages/img/report.png'></image>
    <text style='font-size:120%;margin-left:2%'>举报</text>
  </view>
  <view class="cancelMenu" id="1" bindtap='closeMenu'>
    <text>取消</text>
  </view>
</view>

<view class="cu-modal {{modalName=='report'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class='content'>举报理由</view>
      <view class='action' bindtap='hideModal'>
        <text class='icon-close text-red'></text>
      </view>
    </view>
    <view class='padding-xl'>
      <radio-group class="block" bindchange="reportReasonChange">
        <view class='grid'>
          <view class='padding-xs' wx:for="{{reportReason}}" data-index='{{index}}'  wx:key>
            <label class='flex justify-between align-center flex-sub'>
              <radio class='round' value='{{item}}' id="{{index}}" >{{item}}</radio>
            </label>
          </view>
        </view>
      </radio-group>
    </view>
    <view class="cu-bar bg-white justify-end">
      <view class='action'>
        <button class='cu-btn line-green text-green' bindtap='hideModal'>取消</button>
        <button class='cu-btn bg-green margin-left' bindtap='reportComment'>举报</button>
      </view>
    </view>
  </view>
</view>
</view>

<view class="info_v" bindtap='showHasFinish' id='1'>
<view class="info_t"><view class='info_imgV'><image   class="info_img" src='/pages/img/has.png '></image> 已结束信息</view><text value=""  placeholder-style='font-size:70%;text-align:right'>{{labelHas}}</text></view>
</view>


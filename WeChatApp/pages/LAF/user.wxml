<view class="title" >
<view class='title_text'><text>个人中心</text></view>
</view>

<view class="userinfo">
      <image class="userinfo-avatar" src="{{userPic}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{username}}</text>
</view>



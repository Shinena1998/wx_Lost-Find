page{
  background-color:  whitesmoke;
  height: 100%;
  margin-left: 3%;
  margin-right: 3%;
  width: 94%;
  font-size: 80%;
}
button::after{
border: none;
}
.title{
  width: 106%;
  margin-left: -3%;
  height: 5%;
  background-color: white;
}
.title_text{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center
}
.comeback{
  width: 15%;
  height: 100%;
}
.InfoView{
  width: 100%;
  height: 90%;
  display: flex;
  flex-direction: column;
}

.color{
  color: green;
}
.text{
  width:100%;
  margin-top: 3%;
  margin-bottom: 3%;
}
.info_c{
  width: 100%;
  height: 6%;
  display:flex;
  align-items: center;
  margin-bottom: 3%;
  margin-top: 3%;
}
.info_a{
  width: 100%;
  height: 60%;
  display: flex;
}
.category{
  font-size:80%;
  background-color:blue;
  color:white;
  margin-left: 3%;
  padding: 0 2% 0 2%;
  border-radius: 20%;
}
.time{
  font-size:80%;
  color:rgb(90, 90, 90);
}
.timeView{
  width: 100%;
  display:flex;
  align-items: center;
  justify-content: space-between;
}
.place{
  width: 100%;
  color: rgb(128, 211, 3);
  font-size: 100%;
}
.content{
  width: 100%;
  height: 8%;
  background-color: white;
  margin-top: 3%;
  margin-bottom: 15%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contentWay{
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  font-size:150%;
}
.label_left{
  width: 40rpx;
  border-top-left-radius: 50%;
  border-bottom-left-radius: 50%;
  background-color: green;
}
.label_middle{
  background-color:green;
  font-size: 130%;
  color: white;
  margin-left: -1%;
  margin-right: -1%;
}
.label_right{
  width: 40rpx;
  background-color: green;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;

}
.label_css{
  display: flex;
  margin-right: 3%;
}
.finishView{
  width: 100%;
  margin-left: -3%;
  height: 8%;
  position: fixed;
  bottom: 0%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.finish_button_view{
  width:20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
  border-top: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
  color: rgb(134, 132, 132);
  font-size: 80%;
}
.finishButton{
  height: 101%;
  width: 60%;
  color:green;
  display: flex;
  justify-content: center;
  border-radius: 0;
  align-items: center;
  background-color: white;
  border-top: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
}
.finishImg{
  height: 50%;
  width: 40%;
}
.shareImg{
  height: 60%;
  width: 20%;
  margin-right: 5%;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 80%;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0; 
  z-index: 9998;
  background: rgb(233, 241, 235);
  margin: -180rpx 105rpx; 
  border-radius: 16rpx;
}

.modal-title {
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
  font-size: 80%
}
.modal-content1{
  border-top: 1px solid #dedede;
  padding: 20rpx 32rpx;
  font-size: 80%
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 80%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
  border-radius: 16rpx;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  line-height: 86rpx;
  font-size: 80%
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
  border-radius: 10rpx;
  font-size: 80%
}

.btn-confirm {
  width: 50%;
  border-radius:10rpx;
  font-size: 80%
}

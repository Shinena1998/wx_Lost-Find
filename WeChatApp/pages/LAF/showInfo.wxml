
<view class='title'>{{title}}</view>
<scroll-view  scroll-y="true" class="infoAll" enable-back-to-top='true' scroll-with-animation="true" bindscrolltolower='addInformation' wx:if="{{showInfo}}" >
<view class="infoView" wx:for="{{category}}" bindtap='comein' wx:for-item="goods" data-index='{{index}}' wx:key="name" >
<view class='OneInfo'>
<view class="infoImgView">
<image class="infoImg" src = "{{goods.picPath}}"></image>
</view>
<view  class="infoText" 
style="background-image: url({{imgList[index]}})">
<view class = "infoThemeView" >
<view class='infoThemeRemindView'>
<view class='infoKind'><image style="height:80%;width:9%;margin-right:1%;margin-left:1.5%;"src='/pages/img/kind.png'></image>{{goods.kind}}</view>
<image class="infoRemind"src='/pages/img/C329252B-4FC3-4677-9AAF-362E42B3D75D.png ' wx:if="{{goods.confirm}}"></image>
</view>
<view class='infoTheme'><image style="height:80%;width:8%;margin-left:1.5%;margin-right:2%"src='/pages/img/theme.png'></image><text style='color:green; '>{{goods.theme}}</text></view>
</view>
<view class="infoPlace"><image style="height:50%;width:9%;margin-right:2%;"src='/pages/img/place.png'></image>
<text style="width:100%">{{goods.place}}</text></view>
<view class="infoTime"><image style="height:110%;width:8%;margin-right:1%;"src='/pages/img/time.png'></image><text>{{goods.time}}</text></view>
</view>
</view>
</view>
</scroll-view>


<form bindsubmit="formSubmit" report-submit='true' wx:if='{{showAdvice}}' >
<view class="adviceView" >
<image class='adviceImg' src='/pages/img/04659501-44ED-4F2E-B77D-295111F566A3.png'></image>
<textarea name="advice" class="advice" placeholder='请输入您的建议或意见...' placeholder-style='font-size:100%'confirm-type='done'></textarea>
<textarea name="contactWay" class='content' placeholder='有需要的话，请留下您的联系方式...' placeholder-style='font-size:100%'confirm-type='done'></textarea>
</view>
<button  style='width:60%;margin-top:3%;'formType="submit" type='primary'>提交</button>
</form>
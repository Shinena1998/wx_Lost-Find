

<swiper indicator-dots='true' style='white-space:nowrap;' class="thingInfo" autoplay="true" circular='true'>

<block wx:if="{{showValuable}}">
<swiper-item>
<image style='width:100%;height:100%' src='/pages/img/timg2.jpg '></image>
</swiper-item>
<swiper-item>
<image style='width:100%;height:100%' src='/pages/img/timg3.jpg '></image>
</swiper-item>
<swiper-item>
<image style='width:100%;height:100%' src='/pages/img/timg4.jpg '></image>
</swiper-item>
<swiper-item>
<image style='width:100%;height:100%' src='/pages/img/timg5.jpg '></image>
</swiper-item>
</block>
<block wx:else>
<view wx:for="{{valuable}}" bindtap='comein' wx:for-item="goods" data-index='{{index}}'  wx:key="name" >
<swiper-item>
<view class='OneInfo'>
<view class="infoImgView">
<image class="infoImg" src = "{{goods.picPath}}"></image>
</view>
<view  class="infoText" 
style="background-image: url({{imgList[index]}})">
<view class = "infoThemeView" >
<view class='infoThemeRemindView'>
<view class='infoKind'><image style="height:80%;width:8%;margin-right:2%;margin-left:1%;"src='/pages/img/kind.png'></image>{{goods.kind}}</view>
</view>
<view class='infoTheme'><image style="height:80%;width:8%;margin-right:2%;margin-left:1%"src='/pages/img/theme.png'></image><text style='color:green; '>{{goods.theme}}</text></view>
</view>
<view class="infoPlace"><image style="height:50%;width:9%;margin-right:2%;"src='/pages/img/place.png'></image>
<text style="width:100%">{{goods.place}}</text></view>
<view class="infoTime"><image style="height:110%;width:8%;margin-right:2%;"src='/pages/img/time.png'></image><text>{{goods.time}}</text></view>
</view>
</view>
</swiper-item>
</view>
</block>
</swiper>

<text></text>

<view class="remind">
  <view style='display:flex;width:100%;height:100%;align-items:center'>
    <image class="logoLeft" src='/pages/img/notice.png'></image>
    <!-- <text class="logoRight"  style='color:#ff7a45;font-size:24rpx'>{{remind}}</text> -->
    <scroll-view class="container">
      <view class="scrolltxt">
        <view class="marquee_box">
          <view class="marquee_text" style="transform:translateX(-{{marqueeDistance}}px)">
            <text>{{remind}}</text>
            <text style="margin-right:{{marquee_margin}}px;"></text>
            <text style="margin-right:{{marquee_margin}}px;">{{remind}}</text>   
          </view>
        </view>
      </view>
    </scroll-view>
  </view>
</view>

<view class="cu-list menu {{menuBorder?'sm-border':''}} {{menuCard?'card-menu margin-top':''}} margin-top" >
  <view class="cu-item {{menuArrow?'arrow':''}}" bindtap='toNews'>
    <view class='content'>
      <text class='icon-newshot '></text>
      <text style='font-size:28rpx'>权益周报</text>
    </view>
    <view class='action'>
        <text class='icon-right text-grey'></text> 
    </view>
  </view>
  <view class="cu-item {{menuArrow?'arrow':''}}" bindtap='toThanks'>
    <view class='content'>
      <text class='icon-friend '></text>
      <text style='font-size:28rpx'>感谢墙</text>
    </view>
    <view class='action'>
        <text class='icon-right text-grey'></text> 
    </view>
  </view>
</view>


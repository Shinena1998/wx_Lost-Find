<scroll-view  scroll-y="true" class="infoAll" enable-back-to-top='true' scroll-with-animation="true" >
  <view class="cu-form-group">
    <view class='title'>物品类型</view>
    <input placeholder="请输入物品名称" class='radius' value='{{kind}}' disabled='true' name='theme'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>物品名称</view>
    <input placeholder="请输入物品名称" class='radius' value='{{name}}'  disabled='true'  name='name'></input>
  </view>
  <view class="cu-form-group top">
    <view class='title'>详细信息</view>
    <textarea placeholder="请详细描述信息" placeholder-class='placeholder' name="info" value='{{infoo}}' ></textarea>
  </view>
 <view class="cu-form-group">
    <view class='title'>物品种类</view>
    <input placeholder="请输入物品名称" class='radius'disabled='true'  name='kind' value='{{category}}' ></input>
  </view>
  <view class="cu-form-group ">
    <view class="grid col-3 grid-square flex-sub flex flex-wrap  justify-between">
      <view class="padding-xs bg-img solids"  style="background-image:url({{picPath}});">
      </view>
    <view class="padding-xs  ">
      贵重物品
      <switch class='red sm' disabled='true' checked='{{valuable}}'></switch>
    </view>
    <!-- <view wx:if="{{isValuable}}" class="padding-xs bg-img"  style="background-image:url(/pages/img/valuable.png);">
      </view> -->
  </view>
 
  </view>
  <view class="cu-form-group" wx:if="{{isCard}}">
    <view class="title" >证件卡号</view>
    <input placeholder="请输入物品名称" class='radius' disabled='true' value='{{num}}' ></input>
  </view>

  <view class="cu-form-group">
    <view class='title'>日期选择</view>
    <input placeholder="请输入物品名称"value='{{date}}'  class='radius'disabled='true'  name='theme'></input>
  </view>
   <view class="cu-form-group">
    <view class='title'>校区选择</view>
    <input placeholder="请输入物品名称" value='{{place}}'  class='radius'disabled='true'  name='theme'></input>
  </view>
   <view class="cu-form-group">
    <view class='title'>联系方式</view>
    <input placeholder="请输入物品名称"value='{{phone}}'  class='radius'disabled='true'  name='theme'></input>
  </view>

  <view class="padding flex flex-wrap  justify-around align-center bg-white margin-top" wx:if="{{showType}}">
    <button class='cu-btn round' bindtap='showModal' id="0">拒绝</button>
    <button class='cu-btn round' bindtap='showModal' id='1'>同意</button>
  </view>
  <view class="padding flex flex-wrap  justify-around align-center bg-white margin-top" wx:else>
    <button class='cu-btn round' bindtap='showModal1' id="0">拒绝</button>
    <button class='cu-btn round' bindtap='showModal1' id='1'>同意</button>
  </view>
</scroll-view>
<view class="cu-modal {{modalName=='agree'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class='content'>确认操作</view>
      <view class='action' bindtap='hideModal'>
        <text class='icon-close text-red'></text>
      </view>
    </view>
    <view class='padding-xl'>
      {{remind}}
    </view>
    <view class="cu-bar bg-white justify-end" >
      <view class='action'>
        <button class='cu-btn line-green text-green' bindtap='hideModal'>取消</button>
        <button class='cu-btn bg-green margin-left' bindtap='infoReport'>确定</button>
      </view>
    </view>
  </view>
</view>
<view class="cu-modal {{modalName=='show'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class='content'>确认操作</view>
      <view class='action' bindtap='hideModal'>
        <text class='icon-close text-red'></text>
      </view>
    </view>
    <view class='padding-xl'>
      {{remind}}
    </view>
    <view class="cu-bar bg-white justify-end" >
      <view class='action'>
        <button class='cu-btn line-green text-green' bindtap='hideModal'>取消</button>
        <button class='cu-btn bg-green margin-left' bindtap='valuableCheck'>确定</button>
      </view>
    </view>
  </view>
</view>

